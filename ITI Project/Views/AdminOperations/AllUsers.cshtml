@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Users";
}

<div class="container my-5">
    <!-- Title -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0" style="text-decoration-color:#486888">
            <i class="bi bi-people-fill me-2"></i> Registered Users
        </h2>
        <span class="badge fs-6 shadow-sm" style="background-color:brown">
            Total: @Model.Count()
        </span>
    </div>

    <!-- Table -->
    <div class="table-responsive shadow-lg rounded-4">
        <table class="table table-hover table-borderless align-middle mb-0">
            <thead class="text-white" style="background-color:#486888">
                <tr>
                    <th scope="col"><i class="bi bi-person-fill me-1"></i> Username</th>
                    <th scope="col"><i class="bi bi-envelope-fill me-1"></i> Email</th>
                    <th scope="col"><i class="bi bi-telephone-fill me-1"></i> Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="border-bottom">
                        <td class="fw-semibold">@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            @if (!string.IsNullOrEmpty(user.PhoneNumber))
                            {
                                @("+2" + user.PhoneNumber)
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Not provided</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Empty state -->
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center mt-4 rounded-3 shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> No users found.
        </div>
    }
</div>
