<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITI_Project</title>
	<link rel ="stylesheet" href="~/css/bootstrap.min (3).css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITI_Project.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-transparent position-absolute w-100">
            <div class="container-fluid position-relative">
                <!-- اللوجو شمال -->
                <a class="navbar-brand d-flex align-items-center text-white fw-bold" href="/">
                    Fitinity
                </a>

                <!-- زرار الموبايل -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- اللينكات في النص (ثابتة) -->
                <div class="position-absolute top-50 start-50 translate-middle">
                    <ul class="navbar-nav flex-row gap-3">
                        <li class="nav-item"><a class="nav-link text-white" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Home/About">About</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Home/Contact">Contact</a></li>
                    </ul>
                </div>

                <!-- اليمين -->
                <div class="ms-auto">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>


    </header>

    <main role="main">
        @RenderBody()
    </main>


    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
