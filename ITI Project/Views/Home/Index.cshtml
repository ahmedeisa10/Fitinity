<div class="w-100 mt-4 d-flex flex-wrap">
    @foreach (var product in Model.Products)
    {
        <div class="card mx-2 mb-4" style="width: 16rem;">
            @if (string.IsNullOrEmpty(product.Image))
            {
                <img style="width:100%;height:300px" src="/Images/No image.jpg" class="card-img-top" alt="..." title="No Image">
            }
            else
            {
                <img style="width:100%;height:300px" src="/Images/@product.Image" class="card-img-top" alt="..." title="@product.ProductName">

            }
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@product.ProductName</h5>
                <p class="card-text">
                    <b>Category</b>: @product.CategoryName
                    <br />
                    <b>Description</b>: @product.Description
                    <br />
                    <b>Price</b>: @product.Price $
                     <br/> 
                    <b>Quantity</b>: @product.Quantity  
                </p>
                @if (product.Quantity > 0)
                {

                    <button type="button" onclick="add(@product.Id)" class="btn btn-primary mt-auto w-100">Add To Cart</button>
                }
                else
                {
                    <span style="border: 1px solid;padding: 5px 8px;color: red;border-radius: 5px;">Out of stock</span>

                }
            </div>
        </div>
    }
</div>



