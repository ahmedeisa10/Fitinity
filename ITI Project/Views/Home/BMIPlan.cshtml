            const weight = parseFloat(document.getElementById('weight').value);
            const height = parseFloat(document.getElementById('height').value);

            if (isNaN(weight) || isNaN(height) || weight <= 0 || height <= 0) {
                resultDiv.textContent = 'Please enter valid values for weight and height';
                resultDetailsDiv.style.display = 'none';
                return;
            }

            // Calculate Body Mass Index (BMI)
            const heightInMeter = height / 100;
            const bmi = weight / (heightInMeter * heightInMeter);

            // Determine category and appropriate message
            let category = '';
            let message = '';
            let programType = '';

            if (bmi < 18.5) {
                category = 'Underweight';
                message = 'We recommend following a weight gain program to achieve a healthy and ideal weight.';
                programType = 'underweight';
