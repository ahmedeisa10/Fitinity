                plan.days.forEach((day, index) => {
                    planHTML += `
                        <button class="day-btn ${index === 0 ? 'active' : ''}" data-day="${index}">${day.day}</button>
                    `;
                });
                
                planHTML += `</div>`;
                
                // Add day content
                plan.days.forEach((day, index) => {
                    planHTML += `
                        <div class="day-plan ${index === 0 ? 'active' : ''}" id="day-${index}">
                            <h5>${day.day}</h5>
                    `;
                    
                    day.meals.forEach(meal => {
                        planHTML += `
