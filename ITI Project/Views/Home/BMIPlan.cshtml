            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
        }

    .plans-page .calculate-btn {
        padding: 12px;
        background: #2575fc;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background 0.3s;
    }

        .plans-page .calculate-btn:hover {
            background: #1a5fd0;
        }

    .plans-page .result {
        text-align: center;
        margin-top: 20px;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .plans-page .result-details {
        text-align: center;
        margin: 15px 0;
        padding: 15px;
        border-radius: 10px;
        background: #f8f9fa;
        display: none;
    }

        .plans-page .result-details h4 {
            color: #2575fc;
            margin-bottom: 10px;
        }

