            text-align: center;
            color: #2575fc;
            margin-bottom: 20px;
            font-size: 2rem;
        }

    .plans-page .bmi-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
        max-width: 500px;
        margin: 0 auto;
    }

    .plans-page .form-group {
        display: flex;
        flex-direction: column;
    }

        .plans-page .form-group label {
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
        }

        .plans-page .form-group input {
