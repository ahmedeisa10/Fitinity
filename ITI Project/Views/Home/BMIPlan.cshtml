        function showNutritionPlan(planType) {
            const plan = nutritionPlans[planType];

            let planHTML = `
                <h3>${plan.title}</h3>
                <div class="plan-header">
                    <h4>${plan.description}</h4>
                </div>
                <div class="plan-days">
            `;

            // Add day buttons
            plan.days.forEach((day, index) => {
                planHTML += `
                    <button class="day-btn ${index === 0 ? 'active' : ''}" data-day="${index}">${day.day}</button>
                `;
            });

            planHTML += `</div>`;

            // Add day content
            plan.days.forEach((day, index) => {
                planHTML += `
                    <div class="day-plan ${index === 0 ? 'active' : ''}" id="day-${index}">
                        <h5>${day.day}</h5>
                `;

                day.meals.forEach(meal => {
                    planHTML += `
                        <div class="meal">
                            <h6>${meal.name}</h6>
                            <p>${meal.description}</p>
                        </div>
                    `;
                });

                planHTML += `</div>`;
            });

            nutritionPlan.innerHTML = planHTML + `<button class="close-plan" id="close-plan">X Close</button>`;

            nutritionPlan.style.display = 'block';
            setTimeout(() => {
                nutritionPlan.classList.add('show');
            }, 10);

            // Add click events for day buttons
            const dayButtons = nutritionPlan.querySelectorAll('.day-btn');
            const dayPlans = nutritionPlan.querySelectorAll('.day-plan');

            dayButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const dayIndex = this.getAttribute('data-day');

                    // Remove active from all buttons
                    dayButtons.forEach(btn => btn.classList.remove('active'));
                    // Hide all plans
                    dayPlans.forEach(plan => plan.classList.remove('active'));

                    // Add active to selected button
                    this.classList.add('active');
                    // Show selected plan
                    document.getElementById(`day-${dayIndex}`).classList.add('active');
                });
            });

            // Reattach close event to the new button
            document.getElementById('close-plan').addEventListener('click', function() {
                nutritionPlan.classList.remove('show');
                setTimeout(() => {
                    nutritionPlan.style.display = 'none';
                }, 800);
            });

            nutritionPlan.scrollIntoView({behavior: 'smooth'});
