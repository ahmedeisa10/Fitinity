                category = 'Normal Weight';
                message = 'Well done! Your weight is in the healthy range. We recommend following a weight maintenance program.';
                programType = 'normal';
            } else if (bmi >= 25 && bmi < 30) {
                category = 'Overweight';
                message = 'We recommend following a weight loss program to achieve a healthy and ideal weight.';
                programType = 'overweight';
            } else {
                category = 'Obesity';
                message = 'We recommend consulting a nutritionist and following a weight loss program under medical supervision.';
