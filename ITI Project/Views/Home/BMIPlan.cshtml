        color: white;
        text-align: center;
        border-radius: 50px;
        font-size: 1.3rem;
        font-weight: bold;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        border: none;
        cursor: pointer;
        animation: pulse 2s infinite;
    }

        .plans-page .cta-button:hover {
            background: #ff8e8e;
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

