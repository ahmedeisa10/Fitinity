@model ITI_Project.DTO.ProductDisplayModel

<div class="w-100 mt-4 d-flex flex-wrap">
    @foreach (var product in Model.Products)
    {
        <div class="card mx-2 mb-4" style="width: 16rem;">
            <img style="width:100%;height:300px"
                 src="@(string.IsNullOrEmpty(product.Image) ? "/Images/No image.jpg" : "/Images/" + product.Image)"
                 class="card-img-top"
                 alt="@product.ProductName"
                 title="@product.ProductName" />
            <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-bold text-truncate">@product.ProductName</h5>
                <p class="card-text small text-muted mb-2">
                    <i class="bi bi-tag"></i> @product.CategoryName
                </p>
                <p class="price fw-bold text-success mb-3">@product.Price EGP</p>
                @if (product.Quantity > 0)
                {
                    <button type="button" onclick="add(@product.Id)" class="btn btn-primary mt-auto w-100">
                        <i class="bi bi-cart-plus"></i> Add To Cart
                    </button>
                }
                else
                {
                    <div class="mt-auto w-100">
                        <span class="d-block text-center"
                              style="border: 1px solid; padding: 5px 8px; color: red; border-radius: 5px;">
                            Out of stock
                        </span>
                    </div>
                }
            </div>
        </div>
    }
</div>
