@model ShoppingCart
@{
    ViewData["Title"] = "User Cart";
}

<div class="container my-5">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <h2 class="fw-bold mb-4 text-center text-primary">🛒 My Shopping Cart</h2>

        <div class="table-responsive shadow-sm rounded-3">
            <table class="table align-middle mb-0">
                <thead class="table-primary text-center">
                    <tr>
                        <th style="width:40%">Product</th>
                        <th style="width:15%">Unit Price</th>
                        <th style="width:20%">Quantity</th>
                        <th style="width:15%">Total</th>
                        <th class="text-center" style="width:10%">
                            <i class="bi bi-trash fs-5 text-secondary" style="cursor:pointer;" ></i>
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartDetails)
                    {
                        <tr class="text-center">
                            <!-- Product -->
                            <td>
                                <div class="d-flex align-items-center">
                                    <!-- صورة المنتج -->
                                    <img src="/Images/@(string.IsNullOrEmpty(item.Product.Image) ? "No image.jpg" : item.Product.Image)"
                                         class="rounded shadow-sm me-3"
                                         style="width:70px; height:85px; object-fit:cover;" />

                                    <!-- تفاصيل المنتج -->
                                    <div class="text-truncate" style="max-width: 260px;">
                                        <div class="fw-bold fs-5">@item.Product.ProductName</div>
                                        <div class="text-muted fs-6"><i class="bi bi-tag"></i>@item.Product.Categories.CategoryName</div>
                                    </div>
                                </div>
                            </td>
                            <!-- Unit Price -->
                            <td><span class="fw-semibold">@item.Product.Price EGP </span></td>

                            <!-- Quantity -->
                            <td>
                                <div class="d-flex align-items-center justify-content-center gap-2">
                                    <a class="btn btn-sm btn-outline-secondary"
                                       href="/Cart/DecreaseItem?productId=@item.ProductId">-</a>
                                    <span class="fw-bold">@item.Quantity</span>
                                    @if (item.Quantity < item.Product.Stock.Quantity)
                                    {
                                        <a class="btn btn-sm btn-outline-primary"
                                           href="/Cart/IncreaseItem?productId=@item.ProductId&&redirect=1">+</a>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of stock</span>
                                    }
                                </div>
                            </td>

                            <!-- Total -->
                            <td class="fw-bold text-success">
                                @(item.Product.Price * item.Quantity) EGP
                            </td>

                            <!-- Remove -->
                            <td class="text-center">
                                <a href="/Cart/DeleteItem?productId=@item.ProductId"
                                   class="btn btn-sm btn-outline-danger rounded-circle"
                                   title="Remove item">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <h4 class="fw-bold">
                Total:
                <span class="text-success">
                    @(Model.CartDetails.Select(i => i.Product.Price * i.Quantity).Sum()) EGP
                </span>
            </h4>
            <a class="btn btn-lg btn-success rounded-pill px-4" href="/Cart/DoCheckout">
                <i class="bi bi-credit-card"></i> Checkout
            </a>
        </div>
    }
    else
    {
        <div class="text-center my-5">
            <div class="card shadow-sm p-5 border-0 rounded-4" style="max-width: 500px; margin:auto;">
                <div class="card-body">
                    <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
                    <h3 class="mt-3">Your Cart is Empty</h3>
                    <p class="text-muted">Looks like you haven’t added anything yet.</p>
                    <a href="/Product/ShowProductsCards" class="btn btn-primary mt-3 rounded-pill px-4">
                        <i class="bi bi-shop"></i> Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    }
</div>
