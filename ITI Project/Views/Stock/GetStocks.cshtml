@using ITI_Project.DTO
@model IEnumerable<StockDisplayModel>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Stocks";
}

<div class="container my-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">
            <i class="bi bi-box-seam" style="color:#486888;"></i> Stock Management
        </h2>
    </div>

    <!-- Search -->
    <form asp-action="GetStocks" method="get" class="row g-2 mb-4">
        <div class="col-md-4">
            <input type="text" name="sTerm" class="form-control" placeholder="🔎 Search by product..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn text-white w-100" style="background-color:#486888;">
                Find
            </button>
        </div>
        <div class="col-md-2">
            <a asp-action="GetStocks" asp-controller="Stock"
               class="btn w-100" style="border:1px solid #486888; color:#486888;">
                Clear
            </a>
        </div>
    </form>

    <!-- Stock Table -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead style="background-color:#486888; color:white;">
                    <tr>
                        <th>📘 Product</th>
                        <th>📦 Stock</th>
                        <th class="text-center">⚙️ Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.ProductName</td>
                                <td>
                                    <span class="badge rounded-pill bg-@(item.Quantity > 10 ? "success" : item.Quantity > 0 ? "warning text-dark" : "danger") px-3 py-2">
                                        @item.Quantity
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="ManageStock"
                                       asp-controller="Stock"
                                       asp-route-productId="@item.ProductId"
                                       class="btn btn-sm text-white rounded-pill px-3"
                                       style="background-color:#486888;">
                                        <i class="bi bi-pencil-square"></i> Update
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-5">
                                <i class="bi bi-archive" style="font-size:2rem;"></i>
                                <p class="mt-2 mb-0">No stock records found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>