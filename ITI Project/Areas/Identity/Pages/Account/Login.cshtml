@page
@model LoginModel
@{
    
    ViewData["HideFooter"] = true;
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center  ">
    <div class="card shadow-lg p-4 rounded-4" style="width: 400px; margin-top:40px">
        <div class="text-center mb-3">
            <i class="bi bi-box-arrow-in-right fs-1 text-primary"></i>
            <h3 class="fw-bold mt-2">Welcome Back</h3>
            <p class="text-muted">Log in to your account</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" type="password" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe"></label>
                </div>

                @* <a asp-page="./ForgotPassword" style="text-decoration:none">Forgot your password?</a> *@
            </div>

            <!-- Login Button -->
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Log in</button>



            <!-- Register Button -->
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
               class="w-100 btn btn-lg btn-outline-secondary mb-3">
                Register
            </a>

            

           





        </form>

        <hr />
        @* Google Sign in *@
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="text-center">
                <p class="text-muted">Or continue with</p>
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit"
                            class="w-100 btn btn-lg btn-light border d-flex align-items-center justify-content-center gap-2"
                            form="external-account"
                            name="provider"
                            value="@provider.Name">
        <svg width="20" height="20" viewBox="0 0 533.5 544.3">
                <path fill="#4285F4" d="M533.5 278.4c0-17.4-1.6-34.1-4.6-50.4H272v95.5h146.9c-6.3 34.1-25.3 63-54 82.4l87.2 68.1c50.9-46.9 80.4-115.8 80.4-195.6z"/>
                <path fill="#34A853" d="M272 544.3c73.3 0 134.8-24.3 179.7-66l-87.2-68.1c-24.3 16.3-55.2 25.9-92.5 25.9-71 0-131.2-47.8-152.7-112.1l-90.5 69.9c43.8 86.5 133.5 151.4 243.2 151.4z"/>
                <path fill="#FBBC05" d="M119.5 324.9c-10.3-30.8-10.3-64.3 0-95.1l-90.5-69.9c-39.7 78.9-39.7 173.4 0 252.3l90.5-69.9z"/>
                <path fill="#EA4335" d="M272 107.7c38.8-0.6 75.9 14.4 104 40.7l78-78C406.8 24.5 345.3 0 272 0 162.3 0 72.6 64.9 28.8 151.4l90.5 69.9c21.5-64.3 81.7-112.1 152.7-112.1z"/>
            </svg>                        <span >Google</span>
                    </button>

                }
            </div>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post"></form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
