@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">

                    <!-- Title -->
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle text-primary fs-1"></i>
                        <h3 class="fw-bold mt-2">@ViewData["Title"]</h3>
                        <p class="text-muted mb-0">
                            Manage, download, or permanently remove your personal data.
                        </p>
                    </div>

                    <hr class="my-4" />

                    <!-- Info Text -->
                    <div class="alert alert-info d-flex align-items-start" role="alert">
                        <i class="bi bi-info-circle-fill fs-5 me-3 mt-1"></i>
                        <div>
                            Your account contains personal data you have provided.
                            You can choose to <strong>download</strong> or <strong>delete</strong> it.
                        </div>
                    </div>

                    <!-- Warning -->
                    <div class="alert alert-danger d-flex align-items-start" role="alert">
                        <i class="bi bi-exclamation-triangle-fill fs-5 me-3 mt-1"></i>
                        <div>
                            <strong>Warning:</strong> Deleting your account will
                            <span class="fw-bold">permanently remove</span> all your personal data.
                            This action <u>cannot</u> be undone.
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="d-flex flex-column flex-md-row gap-3 mt-4">
                        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="flex-fill">
                            <button class="btn btn-outline-primary w-100 py-2 fw-semibold" type="submit">
                                <i class="bi bi-download me-2"></i> Download My Data
                            </button>
                        </form>
                        <a id="delete" asp-page="DeletePersonalData"
                           class="btn btn-danger w-100 py-2 fw-semibold d-flex align-items-center justify-content-center">
                            <i class="bi bi-trash3-fill me-2"></i>
                            <span>Delete My Account</span>
                        </a>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
