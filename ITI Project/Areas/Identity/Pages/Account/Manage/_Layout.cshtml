@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Account</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
	<link href ="~/Images/Apple Icon.png" rel="icon" type="image/png" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #212529;
        }

            .sidebar .nav-link {
                color: #adb5bd;
                font-weight: 500;
            }

                .sidebar .nav-link.active,
                .sidebar .nav-link:hover {
                    background-color: #0d6efd;
                    color: #fff !important;
                    border-radius: 8px;
                }

        .content {
            padding: 30px;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar p-3">
                <h4 class="text-white mb-4">Account</h4>
                <ul class="nav flex-column gap-2">
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString().EndsWith("/Index") == true ? "active" : "")"
                           asp-page="./Index">
                            <i class="bi bi-person"></i> Profile
                        </a>
                    </li>
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString().EndsWith("/Email") == true ? "active" : "")"
                           asp-page="./Email">
                            <i class="bi bi-envelope"></i> Email
                        </a>
                    </li>
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/ChangePassword" ? "active" : "")"
                           asp-page="./ChangePassword">
                            <i class="bi bi-lock"></i> Password
                        </a>
                    </li>
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString().EndsWith("/PersonalData") == true ? "active" : "")"
                           asp-page="./PersonalData">
                            <i class="bi bi-database"></i> Personal Data
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="UserOrder" asp-action="UserOrders"><i class="bi bi-bag-check"></i> My Orders</a>
                        </li>

                    <li>
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door-fill"></i> Back to Home
                        </a>
                    </li>
                    <li class="mt-3">
                        <form asp-area="Identity" asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="btn btn-outline-light w-100">
                                <span>Logout</span>
                            </button>
                        </form>
                    </li>
                </ul>
            </div>



            <!-- Content -->
            <div class="col-md-9 col-lg-10 content">
                <div class="card p-4">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
